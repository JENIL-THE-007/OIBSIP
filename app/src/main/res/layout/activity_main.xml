<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/cbg"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/s"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/text1"
        android:maxLines="1"
        android:text=""
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/r"
        android:layout_width="380dp"
        android:layout_height="110dp"
        android:layout_marginBottom="10dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/text2"
        android:maxLines="1"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginVertical="13dp"
        android:gravity="center">

        <Button
            android:id="@+id/c"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="C"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/lb"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="("
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/rb"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text=")"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="+"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginVertical="13dp"
        android:gravity="center">

        <Button
            android:id="@+id/seven"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="7"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="8"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="9"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/sub"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="-"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginVertical="13dp"
        android:gravity="center">

        <Button
            android:id="@+id/four"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="4"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="5"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="6"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="*"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginVertical="13dp"
        android:gravity="center">

        <Button
            android:id="@+id/one"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="1"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="2"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="3"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/div"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="/"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginVertical="13dp"
        android:gravity="center">

        <Button
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="B"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="0"
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/dot"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="."
            android:textColor="#F6F6F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/eq"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            android:background="@drawable/bt"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="="
            android:textColor="#F6F6F6"
            android:textSize="34sp" />


    </LinearLayout>
</LinearLayout>